#!/bin/sh

# 0️⃣ git-secrets 검사 (시크릿 유출 방지)
git secrets --scan
if [ $? -ne 0 ]; then
  echo "❌ Secret detected! Commit aborted by git-secrets. Please check changes for any GitHub tokens."
  exit 1
fi

# 1️⃣ ESLint 검사
npm run lint
if [ $? -ne 0 ]; then
  echo "❌ Lint failed. Commit aborted."
  exit 1
fi

# 2️⃣ (필요 시) 테스트 실행
# npm run test
# if [ $? -ne 0 ]; then
#   echo "❌ Tests failed. Commit aborted."
#   exit 1
# fi

# 3️⃣ lint-staged 실행
npx lint-staged
if [ $? -ne 0 ]; then
  echo "❌ Lint-staged failed. Commit aborted."
  exit 1
fi
